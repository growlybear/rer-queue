# define the runtime
runtime "node"

# pass the script name to the runtime
exec "page_worker.js"

# node modules need to be included in the upload
# ... although this takes a loooooooooooooooooong time
dir "node_modules"

# include dependency manifest when uploading
file "package.json"

# build your dependencies remotely from package.json
# build "npm install" # run npm install

# you can use "full_remote_build true" or shorthand "remote"
# remote
